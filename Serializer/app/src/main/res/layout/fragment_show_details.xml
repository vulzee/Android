<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clipToPadding="false"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/MyCardViewStyle">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/list_item_image_size"
            android:layout_height="@dimen/list_item_image_size"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>


        <RelativeLayout
            android:id="@+id/item_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:layout_toEndOf="@id/item_image">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:textSize="@dimen/list_item_header_font_size"
                android:textColor="#000000"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/item_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:textSize="@dimen/list_item_secondary_text_font_size"
                android:layout_below="@id/item_title"
                android:textColor="#000000"
                android:ellipsize="end"
                android:maxLines="1"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/MyCardViewStyle">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">
        <TextView
            android:id="@+id/description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="@dimen/top_padding"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:textStyle="bold"
            android:text="@string/description"
            />

        <TextView
            android:id="@+id/item_long_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/top_padding"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:textSize="@dimen/list_item_secondary_text_font_size"
            android:ellipsize="end"
           />
</LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/MyCardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/next_episode_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="@dimen/top_padding"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:textStyle="bold"
            android:text="@string/nextepisode"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/next_episode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/top_padding"
                    android:paddingLeft="@dimen/fab_margin"
                    android:paddingRight="@dimen/fab_margin"
                    android:textSize="@dimen/list_item_secondary_text_font_size"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/next_episode_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/fab_margin"
                    android:paddingRight="@dimen/fab_margin"
                    android:textSize="@dimen/list_item_secondary_text_font_size"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/next_episode_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/top_padding"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin"
                android:textSize="@dimen/list_item_secondary_text_font_size"
                android:ellipsize="end"
                android:layout_weight="1"
                />
        </LinearLayout>
</LinearLayout>

    </android.support.v7.widget.CardView  >

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="8dp"
        style="@style/MyCardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/cast_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="@dimen/top_padding"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:textStyle="bold"
            android:text="@string/cast"
            />

            <android.support.v7.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/show_cast_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/top_padding"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin">
            </android.support.v7.widget.RecyclerView>
</LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
    </ScrollView>